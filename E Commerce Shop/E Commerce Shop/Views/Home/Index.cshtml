@using ASP_MVC_E_Commerce_Final_Project.Models;
@model IEnumerable<Food>

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="section banner">
    <div class="container">
        <div class="row">
            <div class="col-md-12 banner-text">
                <h1>Welcome to My Online Shop</h1>
                <p>...</p>
            </div>
        </div>
    </div>
</section>

<section class="home-choice">
    <div class="container">
        <div class="row bg-white no-gutter shadow">
            @foreach (Food items in Model)
            {
                <div class="col-md-3">
                    <div class="home-thumb @items.FoodType-bg" >
                        <h4>@Html.ActionLink(items.FoodType, "Browse", new { type = items.FoodType })</h4>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

<section class="main-content">
    <div class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>My Shop</h2>
                <p>The menu includes a wide range of items to s
                uit all tastes. We truly believe in the quality of each dish. From preparing all of our sauces, 
                dressings and dips in house, to preparing each dish individually as it is ordered, With the amazing Egyptian taste and 
                of spicy and desserts!.</p>
                
            </div>
            <div class="col-md-4">
                <img src="~/Assets/Images/beverages.jpg" class="img-circle img-responsive" />
            </div>
        </div>
    </div>
</section>